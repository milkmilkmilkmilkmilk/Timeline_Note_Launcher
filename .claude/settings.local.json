{
  "permissions": {
    "allow": [
      "Bash(npm run build:*)",
      "Bash(npm run build)",
      "Bash(npm run lint)",
      "Bash(npm run dev)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git branch:*)",
      "Bash(git -C /mnt/c/Users/usumi/Documents/Obsidian_Vault/.obsidian/plugins/Timeline_Note_Launcher status)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "cd /home/user/Timeline_Note_Launcher && npx eslint --no-warn-ignored --max-warnings=0 $(git diff --name-only --diff-filter=d HEAD -- '*.ts' | head -5) 2>&1 | tail -30 || true"
          }
        ]
      }
    ]
  },
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "teammateMode": "tmux"
}
